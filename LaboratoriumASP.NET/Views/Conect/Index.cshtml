@using LaboratoriumASP.NET.Controllers
@model Dictionary<int, LaboratoriumASP.NET.Models.ContactModel>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Kontakty</h2>
<a class="btn btn-primary" asp-action="Add" asp-controller="Contact">Dodaj Kontakt</a>
<table class="table">
    <thead>
    <tr>
        <th>
            Imię
        </th>
        <th>
            Nazwisko
        </th>
        <th>
            Akcje
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach(var entry in @Model)
    {
        <tr>
            <td>
                @entry.Value.FirstName
            </td>
            <td>
                @entry.Value.LastName
            </td>
            <td>
                <a class="btn btn-primary"
                   asp-action="Edit"
                   asp-controller="Contact"
                   asp-route-id=@entry.Value.Id>Edytuj</a>
                <a class="btn btn-primary"
                   asp-action="Details"
                   asp-controller="Contact"
                   asp-route-id=@entry.Value.Id>Szczegóły</a>
                <a class="btn btn-primary"
                   asp-action="Delete"
                   asp-controller="Contact"
                   asp-route-id=@entry.Value.Id>Usuń</a>
            </td>
        </tr>
    }
    </tbody>
</table>